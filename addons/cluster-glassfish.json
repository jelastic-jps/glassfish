{
  "convertable" : true,
  "jps"         : "https://raw.githubusercontent.com/jelastic-jps/glassfish/master/addons/auto-cluster2.jps",
  "defaultState": false,
   "compatibleAddons": ["glassfish-cluster-addon"],
   "nodeGroupData": {
    "skipNodeEmails": true,
    "scalingMode": "STATELESS",
    "adminUrl": "",
    "isResetServicePassword": false
  },
  "validation": {
      "scalingMode": "STATELESS"
  },
  "description" : "<h3>Scalable Cluster with High Availability</h3>Interconnection of GlassFish servers with pre-configured session replication, load balancing and extra Domain Administration Server (DAS) to perform centralized control of cluster nodes. <a href='https://jelastic.com/blog/glassfish-payara-auto-clustering-cloud-hosting/'>Learn More</a><img width='250' height='250' src='https://raw.githubusercontent.com/jelastic/icons/master/glassfish/jelastic/images/tip-auto-clustering.svg?sanitize=true'>",
  "skipOnEnvInstall": true,
  "extraNodes": {
    "nodeGroup": "das",
    "nodeType": "${clusterNode.nodeType}",
    "fixedCloudlets": "${clusterNode.fixedCloudlets}",
    "flexibleCloudlets": "${clusterNode.flexibleCloudlets}",
    "displayName": "DAS",
    "count": 1,
    "isClusterSupport": false,
    "isDeploySupport": false,
    "isClusterDependency": true,
    "isResetServicePassword": "NODEGROUP",
    "startService": false,
    "validation": {
      "tag": "${clusterNode.tag}",
      "scalingMode": "STATEFUL",
      "maxCount": 1
    }
  }
}
